#                      - valid_values: [ "ubuntu", "debian" ]
#                    version:
#                    constraints:
#                      - valid_values: [ "stretch", "buster", "xenial", "bionic", "focal" ]
    interfaces:
      Standard:
        type: tosca.interfaces.node.lifecycle.Standard
        operations:
          create:
            implementation:
              primary: create
              timeout: 0
    artifacts:
      create:
        type: ansibleGalaxy.artifacts.Ansible
        file: tasks/main.yaml